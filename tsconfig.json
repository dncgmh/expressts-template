{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": false,
    "noImplicitThis": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2017",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": "src",
    "typeRoots": ["src/typing", "node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
